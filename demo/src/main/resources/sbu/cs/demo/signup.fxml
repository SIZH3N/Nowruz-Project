<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sbu.cs.demo.Signup">

    <Label layoutX="200" layoutY="20" style="-fx-font-size: 18px;" text="Sign Up" />

    <Label layoutX="50" layoutY="80" text="Full Name:" />
    <TextField fx:id="nameField" layoutX="150" layoutY="80" />

    <Label layoutX="50" layoutY="120" text="Age:" />
    <TextField fx:id="ageField" layoutX="150" layoutY="120" />

    <Label layoutX="50" layoutY="160" text="Email:" />
    <TextField fx:id="emailField" layoutX="150" layoutY="160" />

    <Button layoutX="147.0" layoutY="330.0" onAction="#nextPage" text="Next" />
    <Label layoutX="100.0" layoutY="370.0" text="Already have an account?" />
    <Hyperlink layoutX="263.0" layoutY="367.0" onAction="#switchToLogin" text="Login" />


</AnchorPane>
